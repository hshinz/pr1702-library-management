<h2><%= t ".all_borrows" %></h2>
<table class="table table-hover">
  <%= link_to t(".accept"), {action: "create"}, class: "accept-borrow btn btn-primary" %>
  <thead class="table-title">
    <tr>
      <th><%= t ".id" %></th>
      <th><%= t ".user_id" %></th>
      <th><%= t ".book_id" %></th>
      <th><%= t ".book_name" %></th>
      <th><%= t ".status" %></th>
      <th><%= t ".date" %></th>
    </tr>
  </thead>
  <tbody>
    <% @borrows.each do |borrow| %>
      <tr>
        <td><%= borrow.id %></td>
        <td><%= user.id %></td>
        <td><%= book.id %></td>
        <td><%= book.name %></td>
        <td><%= book.status %></td>
        <td><%= borrow.date %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @borrows %>
