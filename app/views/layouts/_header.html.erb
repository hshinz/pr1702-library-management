<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <div class="navbar-brand"><%= link_to t(".library"), root_path, class:"glyphicon glyphicon-book", id: "logo" %></div>
    </div>
    <form class="navbar-form navbar-left" action="#">
      <div class="input-group">
        <input type="text" class="form-control" placeholder="Nhập tên sách, tuyển tập, tác giả,...">
      <div class="input-group-btn">
      <button class="btn btn-default" type="submit">
        <i class="glyphicon glyphicon-search"></i>
      </button>
      </div>
      </div>
    </form>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".home"), root_path, class:"glyphicon glyphicon-home" %></li>
        <li class="dropdown">
          <a class="dropdown-toggle glyphicon glyphicon-menu-hamburger" data-toggle="dropdown" href="#">
            <%= t ".categories" %><span class="caret"></span>
          </a>
          <ul class="dropdown-menu" role="menu" aria-labelledby="menu1">
            <li role="presentation" class="dropdown-header">
              <%= link_to t(".audio_book"), "#" %>
            </li>
            <li role="presentation"><a role="menuitem" tabindex="-1" href="#">
              <%= link_to t(".story"),"#" %></a>
            </li>
            <li role="presentation"><a role="menuitem" tabindex="-1" href="#">
              <%= link_to t(".life_skill"),"#" %></a>
            </li>
            <li role="presentation"><a role="menuitem" tabindex="-1" href="#">
              <%= link_to t(".children's_story"), "#" %></a>
            </li>
            <li role="presentation" class="divider"></li>
            <li role="presentation" class="dropdown-header">
              <%= link_to t(".business"), "#" %>
            </li>
            <li role="presentation"><a role="menuitem" tabindex="-1" href="#">
              <%= link_to t(".startup"), "#" %></a>
            </li>
            <li role="presentation"><a role="menuitem" tabindex="-1" href="#">
              <%= link_to t(".sales_marketing"), "#" %></a>
            </li>
            <li role="presentation"><a role="menuitem" tabindex="-1" href="#">
              <%= link_to t(".leadership_manager"), "#" %></a>
            </li>
          </ul>
        </li>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t ".account" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), current_user %></li>
              <li><%= link_to t(".setting"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".login"), login_path, class:"glyphicon glyphicon-user" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
